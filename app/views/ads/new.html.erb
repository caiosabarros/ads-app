<h1> Add your Ad!</h1>

<%= form_for @ad do |form| %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>

  </div>

  <div>
    <%= form.label :description  %>
  <%= form.text_field :description %>

  </div>

  <div>
    <%= form.label :price %>
  <%= form.text_field :price %>

  </div>

  
  <div>
    <%= form.submit "Publish" %>
  </div>
  
<%end%>